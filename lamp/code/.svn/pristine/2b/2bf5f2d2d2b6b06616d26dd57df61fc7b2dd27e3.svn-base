@charset "utf-8";
body {
    margin: 0px;
    padding: 0px;
    background-color: rgba(253, 247, 234, 0.6);
}

.form-box {
    margin: 200px auto;
    width: 340px;
    height: 300px;
    border-radius: 30px;
    background-color: rgba(248, 249, 250, 1);
    box-shadow: 0px 10px 5px rgba(102, 102, 102, 1);
    position: relative;
}

.register-form{
    margin: 200px auto;
    width: 340px;
    height: 400px;
    border-radius: 30px;
    background-color: rgba(248, 249, 250, 1);
    box-shadow: 0px 10px 5px rgba(102, 102, 102, 1);
    position: relative;
}

.link {
    left: 20px;
    width: 300px;
    position: absolute;
    height: 40px;
    top: 18px;
    border-bottom: 1.5px solid rgba(153, 153, 153, 0.6);
}

.ring {
    width: 20px;
    height: 20px;
    border-radius: 10px;
    margin: 15px 0px;
    margin-left: 30px;
    background-color: rgba(220, 222, 225, 1);
    display: inline-block;
    position: relative;
}

.ring:before {
    content: "";
    width: 20px;
    height: 20px;
    border-radius: 10px;
    top: 30px;
    background-color: rgba(220, 222, 225, 1);
    display: inline-block;
    position: absolute;
}

.ring:after {
    content: "";
    position: absolute;
    width: 6px;
    height: 35px;
    top: 7px;
    left: 7px;
    border-radius: 3px;
    background-color: rgba(255, 255, 255, 1);
}

form {
    margin: 20px auto;
    width: 100%;
    height: 200px;
    text-align: center;
    /*border:1px solid rgba(0,0,0,1);*/
}

input {
    margin: 0px;
    padding: 0px;
    margin-top: 10px;
    width: 220px;
    height: 30px;
    outline: none;
    border-radius: 15px;
    font-size: 20px;
}

#user, #pwd, #age,#sex{
    text-indent: 10px;
}

#login {
